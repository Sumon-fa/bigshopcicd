{
  "name": "bigshop",
  "version": "1.0.0",
  "description": "Full e-commerce site using mern",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "set NODE_ENV=DEVELOPMENT& nodemon backend/server",
    "prod": "set NODE_ENV=PRODUCTION& nodemon backend/server",
    "seeder": "node backend/utils/seeder.js",
    "build": "cd frontend && npm run build",
    "install-client": "cd frontend && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "dev-client": "cd frontend && npm start",
    "both-install": "concurrently \"npm install\"  \"npm run install-client\""
  },
  "author": "Sumon Fakir",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.27.1",
    "cookie-parse": "^0.4.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.4",
    "nodemailer": "^6.6.3",
    "nodemon": "^2.0.12",
    "stripe": "^8.191.0",
    "validator": "^13.6.0"
  }
}
